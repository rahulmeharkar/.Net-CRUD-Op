@model DataAccessLayer.Model.UserCheckoutModel

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_AfterLayout.cshtml";
}
<script>
    document.getElementById('nav101').style.display = 'none';
    $(document).ready(function () { 
        $("#datepicker").kendoDatePicker();
        //$("#ValidateForm").kendoValidator().data("kendoValidator");
        });
</script>
<div class="notification-box">
    <div class='notification-alert alert  success'>
        <div class='pull-left'><i class='icon-check'></i></div>
        <div class='pull-right'>
            <h5>Success!</h5>
            <p>@ViewBag.message1</p>
        </div>
        <a class='close'><i class='icon-cancel'></i></a>
    </div>
</div>

<div class="notification-box">
    <div class='notification-alert alert danger'>
        <div class='pull-left'><i class='icon-cancel'></i></div>
        <div class='pull-right'>
            <h5>Failed!</h5>
            <p>@ViewBag.message2</p>
        </div>
        <a class='close'><i class='icon-cancel'></i></a>
    </div>
</div>

<div class="form-blocks" id="center">
        <form id="ValidateForm" method="post" action="/Customer/Checkout">
            <div class="form-inline">
                <div class="form-group">
                    <label for="first_name">First Name:</label>
                    <div class="form-group-content">
                        <input type="text" name="first_name" class="k-textbox" placeholder="Rahul" title="textbox" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="last_name">Last Name</label>
                    <div class="form-group-content">
                        <input type="text" class="k-textbox" name="last_name" placeholder="Meharkar" title="textbox" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="address">Address:</label>
                    <div class="form-group-content">
                        <textarea class="form-control k-textbox" name="address" rows="2" required></textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="state">State</label>
                    <div class="form-group-content">
                        <input type="text" class="k-textbox" name="state" placeholder="Maharashrta" title="textbox" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="postalcode">Pin Code:</label>
                    <div class="form-group-content">
                        <input type="text" class="k-textbox" name="postalcode" maxlength="6" placeholder="Pin Code" title="textbox" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="country">Country:</label>
                    <div class="form-group-content">
                        <input type="text" class="k-textbox" name="country" placeholder="Country" title="textbox" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="phone">Mobile Number</label>
                    <div class="form-group-content">
                        <input type="text" class="k-textbox" name="phone" placeholder="8806416475" title="textbox" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <div class="form-group-content">
                        <input type="email" class="k-textbox" name="email" placeholder="rahulmeharkar195@gmail.com" title="textbox" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ship_date">Ship Date</label>
                    <div class="form-group-content">
                        <input id="datepicker" name="ship_date" title="date picker" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="totalprise">Total Prise:</label>
                    <div class="form-group-content">
                        <p id="totalprise">@ViewBag.totalprise</p>
                    </div>
                    
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary k-button">Submit</button>
                </div>

            </div>
        </form>
    </div>
<script>
    $(document).ready(function () {
        var today = new Date(new Date().getTime() + (15 * 24 * 60 * 60 * 1000));

        var lastDate = new Date(today.getFullYear(), today.getMonth() + 3,
                       today.getDate());
        $("#datepicker").kendoDatePicker({
            min: today,
            max: lastDate
        });
        //$("#datepicker").kendoDatePicker({
        //    min: new Date(2021, 00, 16),
        //    max: new Date(2021, 02, 25)
        //});
    });
</script>

