
@{
    ViewBag.Title = "RegisterUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    var check = function () {
        if (document.getElementById('password').value ==
          document.getElementById('confirm_password').value) {
            document.getElementById('message').style.color = 'green';
            document.getElementById('message').innerHTML = 'matching';
        } else {
            document.getElementById('message').style.color = 'red';
            document.getElementById('message').innerHTML = 'not matching';
        }
    }
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<div class="mt-container pd-0">
    <div class="form-login">
        <form action="/Home/RegisterUser" method="post">
            <h5 class="text-left">Register User</h5>
            <div class="form-group">
                <input type="text" name="user_name" id="txtUsername" class="mt-input k-textbox" required>
                <span class="input-bar"></span>
                <label for="txtUsername">Name</label>
            </div>
                <div class="form-group">
                    <input type="email" name="user_email" id="txtUsername" pattern=".+" @@"globex.com" class="mt-input k-textbox" required>
                    <span class="input-bar"></span>
                    <label for="txtUsername">Email</label>
                </div>
                <div class="form-group">
                    <input type="password" name="user_password" id="password" class="mt-input k-textbox" onkeyup='check();' required>
                    <span class="input-bar"></span>
                    <label for="password">Password</label>
                </div>
            <div class="form-group">
                <input type="password" name="confirm_password" id="confirm_password" onkeyup='check();' class="mt-input k-textbox" required>
                <span id='message' class="input-bar"></span>
                <label>Confirm Password</label>
            </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block k-button btn-raised">Sign Up</button>
                </div>
            <div><a class="k-link" href="@Url.Action("SignIn","Home")">Sign In</a></div>
        </form>
    </div>
</div>

